@model IEnumerable<Final4.Models.FilesMetadata>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DownloadDocsIndex";
}

<h1 style="text-align:center">Professional Documents</h1>
<div style="display:flex;width:1200px; justify-content:space-around">
    @{int i = 1;
        @foreach (var item in Model)
        {
    <div style="display:block;width:150px;height:150px;padding:70px 0;text-align:center">
        <img src="@Html.DisplayFor(modelItem => item.FileImage)" width="150" height="150" />
        <p></p>
        <a asp-action="Download" asp-route-id="@i">@Html.DisplayFor(modelItem => item.FileName)</a>
    </div>
        i++;
    
        }
        }
    </div>

<footer style="bottom:0;width:100%;position:absolute;height:2.5rem;">
    <h5 style="text-align:center"><b><a asp-controller="Comments" asp-action="CommentView">Add Comments/Notes</a></b></h5>
    <a href="https://www.linkedin.com/in/anishnesarkar/" target="_blank"><img style="margin-top:7px;" src="~/Images/linkedlnImage.png" height="40" width="40" /></a>
    <a href="https://www.facebook.com/anish.nkr" target="_blank"><img style="margin-top:7px;margin-left:7px" src="~/Images/facebook.png" height="40" width="40" /></a>
    <a href="https://www.instagram.com/anish_nkr/?hl=en" target="_blank"><img style="margin-top:7px;margin-left:7px" src="~/Images/anish_nkr_nametag.png" height="40" width="40" /></a>
    <a style="margin-left:75%" asp-controller="Home" asp-action="Index">Back</a>
</footer>
